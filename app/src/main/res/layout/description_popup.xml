<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wubble="http://schemas.android.com/apk/res-auto"
    android:id="@+id/descPopupRelLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PopupTransparentBackground">


    <android.support.v7.widget.CardView
        android:id="@+id/descPopupCardView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="100dp"
        android:minHeight="100dp"
        wubble:cardCornerRadius="15dp"
        wubble:cardPreventCornerOverlap="false"
        wubble:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/popup_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="Description"
                android:textColor="@color/md_black_1000"
                android:textSize="14dp" />

        </ScrollView>


    </android.support.v7.widget.CardView>

</RelativeLayout>